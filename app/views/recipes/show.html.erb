<div class="card p-4 shadow-sm">
  <h2><%= @recipe.title %></h2>
  <p><strong>Cook time:</strong> <%= @recipe.cook_time %> min</p>
  <p><strong>Difficulty:</strong> <%= @recipe.difficulty %></p>

  <hr>
  <h4>Instructions</h4>
  <div class="p-2 rounded bg-dark bg-opacity-50">
    <%= @recipe.instructions %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-primary" %>
  <%= link_to "Back", recipes_path, class: "btn btn-outline-secondary" %>
</div>
