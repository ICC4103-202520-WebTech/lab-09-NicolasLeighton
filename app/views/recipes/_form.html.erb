<%= form_with(model: recipe, local: true, class: "card p-4 shadow-sm") do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %> prevented saving:</h4>
      <ul>
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :cook_time, "Cook time (minutes)", class: "form-label" %>
    <%= f.number_field :cook_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :difficulty, class: "form-label" %>
    <%= f.text_field :difficulty, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back", recipes_path, class: "btn btn-outline-secondary ms-2" %>
  </div>

  <div class="mb-3">
    <%= f.label :instructions, class: "form-label" %>
    <%= f.rich_text_area :instructions, class: "form-control" %>
  </div>

<% end %>
